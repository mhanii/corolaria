# ===========================================
# Coloraria Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values

# Neo4j Connection
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-password-here

# Google AI API (for embeddings and LLM)
GOOGLE_API_KEY=your-api-key-here

# ===========================================
# Ingestion Pipeline Configuration
# ===========================================

# Worker pool sizes (for DecoupledIngestionOrchestrator)
INGESTION_CPU_WORKERS=12
INGESTION_NETWORK_WORKERS=4
INGESTION_DISK_WORKERS=12
INGESTION_SCATTER_CHUNK_SIZE=1000

# ===========================================
# Observability (Optional)
# ===========================================

# Phoenix tracing
PHOENIX_ENABLED=false
PHOENIX_ENDPOINT=http://localhost:6006

# ===========================================
# EUR-Lex Web Services (EU Document Ingestion)
# ===========================================
# Register at: https://eur-lex.europa.eu/content/tools/webservices/DataExtractionUsingWebServices-v3.00.pdf
# Note: The web service password is sent via email after registration approval

EURLEX_USERNAME=your-ecas-email@example.com
EURLEX_PASSWORD=your-webservice-password
